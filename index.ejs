<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>

  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10  text-white" >
        <form action="/create" method="post">
          <input
            class="block bg-zinc-800 px-5 py-2 w-full rounded-lg "
            type="text"
            placeholder="Title goes here..."
            name="title"
          />

          <textarea
            class="block mt-2 bg-zinc-800 px-5 py-2 resize-none w-full rounded-lg "
            placeholder="write your task details here..."
            name="details"
          ></textarea>

          <input
            class="block  mt-2 bg-blue-600 px-5 py-2 w-full rounded-lg"
            type="submit"
            value="create task"
          />
        </form>
      </div>

      <div class="task p-10 flex gap-3 flex-wrap">
        <% if (files.length > 0) { %>
          <% files.forEach(function(value){ %>
         <div class=" task w-72  bg-zinc-800 px-3 py-4  rounded-lg ">
         <h1 class="text-white text-3xl tracking-tighter"><%= value%></h1>
         <a href="/file/<%= value %>" class="text-blue-500 inline-block mt-3">read more</a>
         </div>

          <% }) %>
        <% }else{ %>
          <h3 class="text-zinc-600">no tasks yet.</h3> 
          <% } %>                    
      </div>
    </div>
  </body>
</html>
